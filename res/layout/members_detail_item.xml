<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fillViewport="true"
		android:layout_gravity="top">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:orientation="vertical">

			<RelativeLayout

				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/plenum_video_bg_grad"
				android:id="@+id/contentHolder">


				<ImageView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:src="@drawable/eagle_watermark_small"
					android:scaleType="fitEnd"
					android:layout_alignBottom="@+id/image_container"
					android:layout_weight="1"
					android:paddingTop="20dip"
					android:adjustViewBounds="true" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:id="@+id/image_container"
					android:weightSum="1"
					android:paddingBottom="10dip">

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_weight="0.6">

						<ImageView
							android:id="@+id/image"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:layout_gravity="left"
							android:scaleType="fitStart"
							android:padding="10dip"/>

						<TextView
							android:id="@+id/copy"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteCopy"
							android:paddingLeft="10dip"
							android:paddingRight="10dip" />

					</LinearLayout>

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_weight="0.4">

						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteTitle"
							android:paddingLeft="10dip"
							android:paddingTop="5dip"
							android:paddingRight="10dip" />

						<TextView
							android:id="@+id/occupation"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteSubTitle"
							android:paddingLeft="10dip"
							android:paddingTop="8dip"
							android:paddingRight="10dip" />

						<TextView
							android:id="@+id/status"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteSubTitle"
							android:paddingLeft="10dip"
							android:paddingTop="8dip"
							android:paddingRight="10dip" />

					</LinearLayout>

				</LinearLayout>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white"
				android:orientation="vertical">

				<!-- -->
				<ImageView
					android:src="@drawable/line_separator"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:orientation="horizontal"
					android:weightSum="1"
					android:paddingTop="5dip"
					android:onClick="showBiography">

					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="top|left"
						android:id="@+id/bio"
						style="@style/MdbNavigationItem"
						android:paddingLeft="10dip"
						android:paddingTop="5dip"
						android:paddingBottom="10dip"
						android:ellipsize="marquee"
						android:layout_weight="0.15" />

					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:src="@drawable/link"
						android:paddingLeft="0dip"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:layout_weight="0.85" />

				</LinearLayout>

				<!-- -->
				<ImageView
					android:src="@drawable/line_separator"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:orientation="horizontal"
					android:weightSum="1"
					android:paddingTop="5dip"
					android:onClick="showInfo">

					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="top|left"
						android:id="@+id/publications"
						style="@style/MdbNavigationItem"
						android:paddingLeft="10dip"
						android:paddingTop="5dip"
						android:paddingBottom="10dip"
						android:ellipsize="marquee"
						android:layout_weight="0.15" />

					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:src="@drawable/link"
						android:paddingLeft="0dip"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:layout_weight="0.85"
						android:layout_gravity="center_vertical" />

				</LinearLayout>

				<!-- -->
				<ImageView
					android:src="@drawable/line_separator"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY"
					android:id="@+id/committeesButtonLine" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:orientation="horizontal"
					android:weightSum="1"
					android:paddingTop="5dip"
					android:onClick="showCommittees"
					android:id="@+id/committeesButton">

					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="top|left"
						android:id="@+id/committees"
						style="@style/MdbNavigationItem"
						android:paddingLeft="10dip"
						android:paddingTop="5dip"
						android:paddingBottom="10dip"
						android:ellipsize="marquee"
						android:layout_weight="0.15" />

					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:src="@drawable/link"
						android:paddingLeft="0dip"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:layout_weight="0.85"
						android:layout_gravity="center_vertical" />

				</LinearLayout>


				<!-- -->
				<ImageView
					android:src="@drawable/line_separator"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:orientation="horizontal"
					android:weightSum="1"
					android:paddingTop="5dip"
					android:onClick="showContact">

					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="top|left"
						android:id="@+id/kontakt"
						style="@style/MdbNavigationItem"
						android:paddingLeft="10dip"
						android:paddingTop="5dip"
						android:paddingBottom="10dip"
						android:ellipsize="marquee"
						android:layout_weight="0.15" />

					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:src="@drawable/link"
						android:paddingLeft="0dip"
						android:paddingTop="5dip"
						android:paddingBottom="10dip"
						android:layout_weight="0.85"
						 />

				</LinearLayout>

				<!-- -->

				<ImageView
					android:src="@drawable/line_separator"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:scaleType="fitXY" />
			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>
