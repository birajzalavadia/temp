<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="top"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:orientation="vertical">

			<RelativeLayout
			    android:id="@+id/contentHolder"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/plenum_video_bg_grad" >

				<ImageView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:src="@drawable/eagle_watermark_small"
					android:scaleType="fitEnd"
					android:layout_alignBottom="@+id/image_container"
					android:layout_weight="1"
					android:paddingTop="20dip"
					android:adjustViewBounds="true" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:id="@+id/image_container"
					android:weightSum="1"
					android:paddingBottom="10dip">

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_weight="0.6"
						android:orientation="vertical">

						<ImageView
							android:id="@+id/image"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:adjustViewBounds="true"
							android:scaleType="fitStart"
							android:padding="10dip" />

						<TextView
							android:id="@+id/copy"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							android:paddingLeft="10dip"
							android:paddingRight="10dip"
							style="@style/WhiteCopy" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_weight="0.4"
						android:orientation="vertical">

						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteTitle"
							android:paddingLeft="10dip"
							android:paddingTop="5dip"
							android:paddingRight="10dip" />

						<TextView
							android:id="@+id/occupation"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteSubTitle"
							android:paddingLeft="10dip"
							android:paddingTop="8dip"
							android:paddingRight="10dip" />

						<TextView
							android:id="@+id/status"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="top|left"
							style="@style/WhiteSubTitle"
							android:paddingLeft="10dip"
							android:paddingTop="8dip"
							android:paddingRight="10dip" />
					</LinearLayout>
					
				</LinearLayout>
				
			</RelativeLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white"
				android:orientation="vertical">

				<TextView
					android:id="@+id/title"
					style="@style/BlackTitle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top|left"
					android:ellipsize="marquee"
					android:padding="10dip" />

				<TextView
					android:id="@+id/subtitle"
					style="@style/BlackTitle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top|left"
					android:ellipsize="marquee"
					android:padding="10dip" />

				<TextView
					android:id="@+id/contact_name"
					style="@style/BlackSubTitleBold"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top|left"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:paddingTop="10dip"
					android:text="teste" />

				<TextView
					android:id="@+id/text"
					style="@style/BlackSubTitle"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top|left"
					android:ellipsize="marquee"
					android:paddingBottom="10dip"
					android:paddingLeft="10dip"
					android:paddingRight="10dip" />
			</LinearLayout>

			<TextView
				style="@style/BlackTitle"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top|left"
				android:ellipsize="marquee"
				android:padding="10dip"
				android:text="Internet" />
			<!-- -->

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:scaleType="fitXY"
				android:src="@drawable/line_separator" />

			<LinearLayout
				android:id="@+id/websites"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/white"
				android:orientation="vertical">

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>