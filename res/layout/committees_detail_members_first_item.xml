<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
	android:orientation="vertical">
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/image"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true" />
	<RelativeLayout

		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@drawable/plenum_video_bg_grad"
		android:id="@+id/contentHolder">


		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:src="@drawable/eagle_watermark_small"
			android:scaleType="fitEnd"
			android:layout_alignBottom="@+id/image_container"
			android:layout_weight="1"
			android:adjustViewBounds="true" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:id="@+id/image_container">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top|left"
				android:id="@+id/title"
				style="@style/WhiteTitle"
				android:padding="10dip"
				/>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/president_group"
				android:paddingLeft="10dip"
				android:paddingRight="10dip">

			</LinearLayout>


			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/vicepresident_group"
				android:paddingLeft="10dip"
				android:paddingRight="10dip">

			</LinearLayout>

		</LinearLayout>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/fraction_name_holder"
		android:background="@drawable/mdb_letter_bg"
		android:visibility="gone">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|left"
			android:id="@+id/fraction_name"
			android:text="Mitglieder CDU/CSU "
			style="@style/PlenumVideoWhiteSubtitle"
			android:paddingLeft="10dip"
			android:paddingTop="5dip"
			android:paddingRight="10dip" />
	</LinearLayout>



</LinearLayout>