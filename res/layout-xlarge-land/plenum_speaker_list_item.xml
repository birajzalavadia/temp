<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- row -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#272F32"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingLeft="10dip"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/start_time"
                style="@style/WhiteSubTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="10dip"
                android:text="13:00" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dip" >

                <ImageView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/plenum_redner_dot_1" />

                <TextView
                    android:id="@+id/status"
                    style="@style/PlenumRedner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="Beendet" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                style="@style/PlenumRedner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="10dip"
                android:text="Enak Ferlemann" />

            <TextView
                android:id="@+id/funtion"
                style="@style/PlenumRedner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="5dip"
                android:text="PStd" />
        </LinearLayout>

        <TextView
            android:id="@+id/topic"
            style="@style/PlenumRedner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:minLines="1"
            android:paddingRight="1dip"
            android:paddingTop="10dip"
            android:text="2334  3453453abc 3453455 345345"
            android:visibility="gone" />
    </LinearLayout>

    <!-- end row -->

</LinearLayout>