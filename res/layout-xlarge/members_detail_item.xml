<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrFling"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/plenum_video_bg_grad"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right|bottom" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|bottom"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:src="@drawable/eagle_watermark_small" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/image_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   
                    android:padding="20dip" >

                    <ImageView
                        android:id="@+id/image_tab"
                        android:layout_width="177dp"
                        android:layout_height="265dp"
                        android:adjustViewBounds="true" />

                    <!--
                         <TextView
                        android:id="@+id/copy_tab"
                        style="@style/WhiteCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip" />
                    -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dip" >

                        <TextView
                            android:id="@+id/name_tab"
                            style="@style/WhiteTitleTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:text="test" />

                        <TextView
                            android:id="@+id/committee_name_tab"
                            style="@style/WhiteSubTitleTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:paddingTop="20dip"
                            android:text="CDU" />

                        <TextView
                            android:id="@+id/occupation_tab"
                            style="@style/WhiteSubTitleTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:paddingTop="20dip"
                            android:text="occupation" />

                        <TextView
                            android:id="@+id/status_tab"
                            style="@style/WhiteSubTitleTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:text="status" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
        <!-- </RelativeLayout> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/top_nav_orange" />

            <LinearLayout
                android:id="@+id/sub_tab_members"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_navigation_gradient"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/subMenuHolder1Tab"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/top_navigation_gradient"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/bio_tab"
                        style="@style/NavigationItemTab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="15dip"
                        android:paddingLeft="2dip"
                        android:paddingRight="2dip"
                        android:paddingTop="15dip"
                        android:text="Biografie" />
                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/submenu_separator" />

                <LinearLayout
                    android:id="@+id/subMenuHolder2Tab"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:background="@drawable/top_navigation_gradient"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/publications_tab"
                        style="@style/NavigationItemTab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="15dip"
                        android:paddingLeft="2dip"
                        android:paddingRight="2dip"
                        android:paddingTop="15dip"
                        android:text="Angaben" />
                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/submenu_separator" />

                <LinearLayout
                    android:id="@+id/subMenuHolder3Tab"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"
                    android:background="@drawable/top_navigation_gradient"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/committees_tab"
                        style="@style/NavigationItemTab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="15dip"
                        android:paddingLeft="2dip"
                        android:paddingRight="2dip"
                        android:paddingTop="15dip"
                        android:text="Mitgliedschaften" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/seperator_subMenuHolder3"
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/submenu_separator" />

                <LinearLayout
                    android:id="@+id/subMenuHolder4Tab"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.27"
                    android:background="@drawable/top_navigation_gradient"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/kontakt_tab"
                        style="@style/NavigationItemTab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="15dip"
                        android:paddingLeft="2dip"
                        android:paddingRight="2dip"
                        android:paddingTop="15dip"
                        android:text="Kontakt" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/seperator_subMenuHolder4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/top_nav_grey" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lnrSubFling"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/detailL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <include layout="@layout/detailheadergradient" />

            <LinearLayout
                android:id="@+id/base_fragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>