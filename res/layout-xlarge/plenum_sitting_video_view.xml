<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrFling"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- <ScrollView -->
    <!-- android:id="@+id/scrView" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_gravity="top" -->
    <!-- android:fillViewport="true" -->
    <!-- android:scrollbars="vertical" > -->

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/video_ctrl_overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/layout1"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/imagelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <VideoView
                                    android:id="@+id/video_tab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/image_tab"
                                    android:layout_width="436dp"
                                    android:layout_height="289dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/startbild_320"
                                    android:visibility="visible" />
                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/progressDialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/black"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:visibility="gone" >

                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/progressMsg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="Video wird geladen" />
                            </LinearLayout>
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center|bottom"
                            android:visibility="visible" >

                            <LinearLayout
                                android:id="@+id/playerControl"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/gallery_top_grad"
                                android:baselineAligned="true"
                                android:orientation="horizontal"
                                android:visibility="gone" >

                                <ImageView
                                    android:id="@+id/btnVideoPlayPause"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="left"
                                    android:background="@android:color/transparent"
                                    android:paddingLeft="17dp"
                                    android:src="@drawable/video_play" />

                                <TextView
                                    android:id="@+id/currentPlayerSelection"
                                    style="@style/GalleryImageCopyTab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Live Stream Video" />

                                <ImageView
                                    android:id="@+id/btnVideoFullScreen"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="right"
                                    android:background="@android:color/transparent"
                                    android:paddingRight="17dp"
                                    android:src="@drawable/fullscreenicon" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/playSelection"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible" >

                                <LinearLayout
                                    android:id="@+id/videoPlayer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/gallery_top_grad"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" >

                                    <ImageView
                                        android:id="@+id/videoPlayPause"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="left"
                                        android:background="@android:color/transparent"
                                        android:paddingLeft="2dp"
                                        android:src="@drawable/video_play" />

                                    <TextView
                                        android:id="@+id/txtVideo"
                                        style="@style/GalleryImageCopyTab"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:paddingRight="10dp"
                                        android:singleLine="true"
                                        android:text="Video-Livestream starten" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/audioPlayer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gallery_top_grad"
                                    android:orientation="horizontal"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" >

                                    <ImageView
                                        android:id="@+id/audioPlayPause"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="right"
                                        android:background="@android:color/transparent"
                                        android:paddingLeft="2dp"
                                        android:src="@drawable/video_play" />

                                    <TextView
                                        android:id="@+id/txtAudio"
                                        style="@style/GalleryImageCopyTab"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:paddingRight="10dp"
                                        android:text="Audio-Livestream starten" />
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtImgBottom"
                style="@style/MdbNavigationTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:paddingRight="10dip"
                android:paddingTop="20dp"
                android:text="Laden..." />

            <TextView
                android:id="@+id/txtAgenda"
                style="@style/BlackSubTitleHeadingTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:paddingRight="10dip"
                android:paddingTop="30dip"
                android:text="Laden..." />

            <TextView
                android:id="@+id/txtAgendaTitle"
                style="@style/BlackSubTitleHeadingTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:paddingBottom="30dp"
                android:paddingRight="10dip"
                android:text="Laden..." />

            <WebView
                android:id="@+id/text"
                style="@style/BlackTextTab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/copyright_tab"
            style="@style/GreyCopyTab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_tab"
            style="@style/BlackTitleTab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="15dip"
            android:text="Laden..."
            android:visibility="gone" />
    </LinearLayout>
    <!-- </ScrollView> -->

</LinearLayout>